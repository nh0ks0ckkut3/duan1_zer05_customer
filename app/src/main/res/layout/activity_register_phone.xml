<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterPhoneActivity">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_out"/>
    <TextView
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="22dp"
        android:text="Vui lòng nhập số điện thoại"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="301dp"
            android:layout_height="60dp"
            android:hint="0776616818"
            android:paddingStart="20dp"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_x" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingStart="330dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_circle"/>
        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-42.5dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/icon_right"/>
    </LinearLayout>



</LinearLayout>