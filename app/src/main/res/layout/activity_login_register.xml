<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginRegisterActivity"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imgSlide"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:iss_period="1000"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_corner_radius="20"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#95958B"
            android:text="Đặt lịch giữ chỗ chỉ 30 giây"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#95958B"
            android:text="Cắt xong trả tiền, hủy lịch không sao"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="ĐĂNG NHẬP/ĐĂNG KÝ"
            android:background="@drawable/background_button_register"/>
        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt lịch ngay"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>