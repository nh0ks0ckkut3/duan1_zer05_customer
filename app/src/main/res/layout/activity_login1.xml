<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <ImageView
          android:id="@+id/imgLogin1"
          android:layout_width="410sp"
          android:layout_height="400sp"
          android:src="@mipmap/login1"/>

      <TextView
          android:layout_marginTop="300sp"
          android:layout_marginStart="-350sp"
          android:layout_width="280sp"
          android:layout_height="60sp"
          android:text="Đặt lịch nhanh xem lại lịch sử cắt"
          android:textSize="25sp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textAlignment="center"
          />

    <TextView
        android:layout_marginStart="-260sp"
        android:layout_marginTop="430sp"
        android:layout_width="250sp"
        android:layout_height="25sp"
        android:text="Đặt lịch giữ chỗ chỉ 30 giây"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginStart="-290sp"
        android:layout_marginTop="460sp"
        android:layout_width="330sp"
        android:layout_height="25sp"
        android:text="Cắt xong trả tiền, hủy lịch không sao"
        android:textSize="20sp"
        android:textAlignment="center"/>

  <androidx.cardview.widget.CardView
      android:layout_width="220sp"
      android:layout_height="60sp"
      android:layout_marginStart="-290sp"
      android:layout_marginTop="520sp"
      app:cardCornerRadius="25sp">

      <Button
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="ĐĂNG NHẬP/ĐĂNG KÝ"
          android:textColor="@color/black"
          android:backgroundTint="#78E67C"
          />
  </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="-170sp"
        android:layout_marginTop="590sp"
        android:layout_width="130sp"
        android:layout_height="25sp"
        android:text="Đặt lịch ngay"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="150sp"
        android:orientation="horizontal"
        android:layout_marginTop="640dp"
        android:layout_marginStart="-120dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:src="@drawable/point"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_focus"
            android:layout_marginEnd="34dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point"
            android:layout_marginEnd="34dp"/>

    </LinearLayout>


</LinearLayout>