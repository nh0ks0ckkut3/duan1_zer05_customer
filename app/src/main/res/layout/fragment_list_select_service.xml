<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListSelectServiceFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/arrowback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:text="Chọn dịch vụ"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#4B4848"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/srch_list_service"
        android:layout_width="187dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/brg_searchview"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="8"
        android:id="@+id/rcl_list_service"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/btnOke"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:text="Chọn dịch vụ"
        android:textSize="16sp"
        android:textColor="@color/darkText"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/btn_confirm_changepassword"
        android:padding="10dp"
        android:layout_marginBottom="38dp"/>
</LinearLayout>