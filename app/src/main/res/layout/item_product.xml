<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTint="@color/white"
    android:layout_width="180dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_history"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="175dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:src="@drawable/producttemp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:id="@+id/tvName"
            android:text="Sáp Vuốt Tóc Tạo Kiểu Giữ\nNếp Tự Nhiên"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="5dp"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="199.000 đ"
            android:textColor="#F44444"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>