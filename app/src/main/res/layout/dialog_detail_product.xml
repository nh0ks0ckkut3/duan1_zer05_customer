<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/background_blue"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHI TIẾT SẢN PHẨM"
                    android:layout_gravity="center"
                    android:layout_marginStart="33dp"
                    android:textColor="#4B4848"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_avatar"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Dầu gội Clear Bạc Hà"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Giá"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textColor="#4A4949"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="200"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:textSize="24sp"
                        android:textColor="#4A4949"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#4A4949"
                        android:text="vnd"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#D6D3D3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Đơn vị"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textColor="#4A4949"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Chai"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:textSize="24sp"
                        android:textColor="#4A4949"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#D6D3D3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Loại"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textColor="#4A4949"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/tvClassify"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Sửa rửa mặt"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:textSize="24sp"
                        android:textColor="#4A4949"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#D6D3D3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Thương hiệu"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp"
                        android:textColor="#4A4949"
                        android:textFontWeight="400"/>
                    <TextView
                        android:id="@+id/tvBrand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="oxy"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:textSize="24sp"
                        android:textColor="#4A4949"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#D6D3D3"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuy"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="MUA NGAY"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_btn_yes"
                android:layout_marginBottom="40dp"
                android:textSize="22dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>