<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BookFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="100dp"
                android:src="@drawable/ic_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Đặt lịch giữ chỗ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="1. Chọn dịch vụ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginEnd="180dp"
                android:text="DV đang chọn"/>

            <TextView
                android:id="@+id/btnChooseService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:text="Chọn DV"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcViewListServiceChoose"
            android:background="@drawable/bg_white_border_black"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="2. Chọn ngày, giờ và stylist"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <HorizontalScrollView
            android:scrollIndicators="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcView"
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_height="wrap_content"/>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/btnBook"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp"
            android:text="HOÀN TẤT"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="#DFDDDD"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cắt xong trả tiền, hủy lịch không sao"
            android:textAlignment="center"
            android:textSize="18sp"/>


    </LinearLayout>

</FrameLayout>