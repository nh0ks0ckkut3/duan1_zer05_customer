<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="16/07/2023"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:10"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:id="@+id/tvTime"/>

    </LinearLayout>

    <LinearLayout
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="230dp"
            android:src="@drawable/thanhhoa"/>
        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Stylist"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tvStylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phạm Quốc Động"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Skinner"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tvSkinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khánh Vy"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tvService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ultra care 2023 120k"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="PTTT"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tvPayMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Số tiền"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120.000đ"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Xem chi tiết"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</LinearLayout>